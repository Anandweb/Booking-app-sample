<div class="container">
  <div class="hotel-wrapper">
    <h1>Hotel List</h1>
    <ul class="row">
      <% @hotels.each do |hotel| %>
          <li class="col-md-4">
            <%= link_to hotel_path(hotel) ,class: "single-wrap" do %>
              <%=  image_tag hotel.image.url(:medium) %>
              <div class="hotel-main-image">
                <span class="name"><%= hotel.name %></span>
                <span class="price"><%=number_to_currency(hotel.price)%></span>
                <p class="description"><%=hotel.description%></p>
              </div>
            <% end %>
          </li>
      <% end %>
    </ul>
    <%= link_to 'Addhotels',new_hotel_path ,class: "addnewhtl hide-btn btn btn-success col-md-4 " %>
  </div>
</div>
